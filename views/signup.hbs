<section>
  <div class="container">
    <a href="/">Inicia Sesión</a>
    <h1>Regístrate</h1>
    <form class="form" validated action="/signup" method="POST"> 
      <input required type="username" name="username" placeholder="Nombre de Usuario" value="{{username}}">
      <input required type="email" name="email" placeholder="Correo" value="{{email}}">
      <input required type="password" name="password" placeholder="Contraseña">
      <button type="submit">Enviar</button>
    </form>
  </div>
</section>